{
    "name": "IoTSmartSysCore",
    "version": "1.0.28",
    "description": "IoTSmartSysCore é a biblioteca core para dispositivos IoT da plataforma IoTSmartSys, fornecendo capabilities, integração MQTT, OTA e gerenciamento de configurações.",
    "keywords": [
        "iot",
        "smarthome",
        "mqtt",
        "esp32",
        "ota"
    ],
    "authors": [
        {
            "name": "Marcelo Miranda",
            "email": "marceloc312@gmail.com",
            "maintainer": true
        }
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/iotsmartsys/IoTSmartSysCore.git"
    },
    "frameworks": [
        "arduino"
    ],
    "platforms": [
        "espressif32"
    ],
    "dependencies": [
        {
            "name": "adafruit/Adafruit ST7735 and ST7789 Library",
            "version": "^1.10.7"
        },
        {
            "name": "adafruit/Adafruit GFX Library",
            "version": "^1.11.9"
        },
        {
            "name": "claws/BH1750",
            "version": "^1.3.0"
        },
        {
            "name": "Wire"
        },
        {
            "name": "adafruit/Adafruit Unified Sensor",
            "version": "^1.1.15"
        },
        {
            "name": "adafruit/DHT sensor library",
            "version": "^1.4.6"
        },
        {
            "name": "milesburton/DallasTemperature",
            "version": "^4.0.4"
        },
        {
            "name": "sparkfun/SparkFun APDS9960 RGB and Gesture Sensor",
            "version": "^1.4.3"
        },
        {
            "name": "adafruit/Adafruit NeoPixel",
            "version": "^1.15.1"
        }
    ],
    "examples": [
        "examples/*/*.cpp"
    ]
}
